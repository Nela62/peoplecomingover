<form class="purchase-form">
    <h2>Buy Now</h2>
    <label>
      Credit Card Number:
      <input type="text" placeholder="1234 5678 9012 3456" />
    </label>
    <label>
      Expiration Date:
      <input type="text" placeholder="MM/YY" />
    </label>
    <label>
      CVC:
      <input type="text" placeholder="123" />
    </label>
    <label>
      Billing Address:
      <input type="text" placeholder="Street, City, State, Zip" />
    </label>
    <label>
      Shipping Address:
      <input type="text" placeholder="Street, City, State, Zip" />
    </label>
    <button type="submit">Buy Now</button>
  </form>

<style>
    /* Purchase form styling */
    .purchase-form {
      margin-top: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      max-width: 600px;
    }
    .purchase-form label {
      display: flex;
      flex-direction: column;
      font-size: 0.9rem;
      color: #333;
    }
    .purchase-form input {
      padding: 0.5rem;
      margin-top: 0.5rem;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .purchase-form button {
      width: fit-content;
      padding: 0.75rem 1.5rem;
      background-color: #3245ff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
    }
  </style>
