---
import logo from '../assets/logo.png';
import texture from '../assets/texture.webp';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lora:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
		<title>Curated Quarters</title>
	</head>
	<body style={`background: url(${texture.src}) no-repeat center center fixed; background-size: cover;`}>
		<header>
			<div class="header-container">
				<img src={logo.src} alt="Curated Quarters Logo" class="site-logo" />
				<h1 class="site-title">Curated Quarters</h1>
				<nav class="site-nav">
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="/products">Products</a></li>
						<li><a href="/about">About Us</a></li>
						<li><a href="/contact">Contact</a></li>
					</ul>
				</nav>
			</div>
		</header>
		<main class="content">
			<slot />
		</main>
		<footer class="site-footer">
			<div class="footer-container">
				<p>&copy; {new Date().getFullYear()} Curated Quarters. All rights reserved.</p>
			</div>
		</footer>

		<div id="instruction-tuning-dataset">
			<style>
				/* Styling for the instruction tuning dataset fold */
				#instruction-tuning-dataset details {
					border: 1px solid #ccc;
					background-color: #f9f9f9;
					padding: 12px;
					border-radius: 8px;
					margin: 1rem 0;
					font-size: 0.9rem;
					color: #333;
				}
				#instruction-tuning-dataset summary {
					font-weight: bold;
					cursor: pointer;
					padding: 4px;
				}
				#instruction-tuning-dataset pre {
					white-space: pre-wrap;
					word-break: break-word;
					font-family: monospace;
					background: #eee;
					padding: 8px;
					border-radius: 4px;
				}
			</style>

