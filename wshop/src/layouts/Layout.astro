---
import logo from '../assets/logo.png';
import texture from '../assets/texture.webp';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lora:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
		<title>Curated Quarters</title>
	</head>
	<body style={`background: url(${texture.src}) no-repeat center center fixed; background-size: cover;`}>
		<header>
			<div class="header-container">
				<img src={logo.src} alt="Curated Quarters Logo" class="site-logo" />
				<h1 class="site-title">Curated Quarters</h1>
				<nav class="site-nav">
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="/products">Products</a></li>
						<li><a href="/about">About Us</a></li>
						<li><a href="/contact">Contact</a></li>
					</ul>
				</nav>
			</div>
		</header>
		<main class="content">
			<slot />
		</main>
		<footer class="site-footer">
			<div class="footer-container">
				<p>&copy; {new Date().getFullYear()} Curated Quarters. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Open Sans', sans-serif;
	}

	header {
		background-color: rgba(249, 249, 249, 0.95);
		padding: 1rem 0;
		border-bottom: 1px solid rgba(238, 238, 238, 0.5);
		position: sticky;
		top: 0;
		z-index: 100;
		box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(10px);
	}

	.header-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.site-title {
		font-family: 'Playfair Display', serif;
		font-size: 2rem;
		font-weight: bold;
		color: #222;
		margin: 0;
		letter-spacing: 0.05em;
	}

	.site-nav ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		gap: 1.5rem;
	}

	.site-nav a {
		font-family: 'Lora', serif;
		font-size: 1.1rem;
		text-decoration: none;
		color: #666;
	}

	.site-nav a:hover {
		color: #3245ff;
		text-decoration: underline;
		transition: color 0.2s ease;
	}

	.site-logo {
		max-height: 50px;
		margin-right: 1rem;
	}

	main.content {
		background-color: rgba(255, 255, 255, 0.95);
		margin: 2rem auto;
		padding: 2rem;
		max-width: 1200px;
		border-radius: 8px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
	}

	footer.site-footer {
		background-color: rgba(249, 249, 249, 0.95);
		padding: 1rem 0;
		border-top: 1px solid rgba(238, 238, 238, 0.5);
		text-align: center;
		font-size: 0.9rem;
		color: #666;
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}
</style>
